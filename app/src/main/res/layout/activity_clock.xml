<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_clock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zyfdroid.tomatoclock.ClockActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/clockBackground"
        android:background="#0085c7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="50sp"
            tools:text="学习"
            android:id="@+id/txtClockDescription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="25sp"
            tools:text="24:59"
            android:id="@+id/txtClockTime"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/progress_border"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp">
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="20"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/bg_progress"
                android:id="@+id/progressTime" />
        </FrameLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|bottom"
        android:background="@drawable/bg_fab_clock"
        android:layout_margin="24dp"
        android:src="@drawable/ic_stop"
        android:onClick="onStopClick"
        android:elevation="5dp"/>

</FrameLayout>
